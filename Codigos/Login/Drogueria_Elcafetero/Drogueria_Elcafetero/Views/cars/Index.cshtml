@model IEnumerable<Drogueria_Elcafetero.Models.details_car>

@{
    Layout = null;
}
<link rel="stylesheet" href="/css/Carrito.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="container">
    <!-- Carrito de Compras y Detalles de Envío -->
    <div class="row mt-5">
        <!-- Carrito de Compras -->
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h3 class="text-center mb-4">Tu Carrito de Compras</h3>

                    <!-- Mensaje de elementos en el carrito -->
                    <div class="d-flex justify-content-between mb-4">
                        <span class="text-muted">Tienes <strong>@Model.Count()</strong> artículo(s) en tu carrito</span>
                    </div>

                    <!-- Tabla de Detalles del Carrito -->
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">Producto</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-center">Precio</th>
                                    <th class="text-center">Subtotal</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NombreProducto</td>
                                        <td><input type="text" class="form-control cantidad" value="@item.Cantidad" disabled/></td>
                                        <td><input type="text" class="form-control precio" value="$@item.Precio" disabled></td>
                                        <td><input type="text" class="form-control subtotal" value="$@(item.Cantidad * item.Precio)" disabled/></td>
                                        <td class="text-center">
                                            <!-- Botón de eliminar -->
                                            <form asp-area="" asp-controller="cars" asp-action="Delete" asp-route-id="@item.CarritoId" method="post">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash-alt"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Total a Pagar -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <span class="total-text font-weight-bold">Total a Pagar</span>
                        <span id="totalPagar" class="font-weight-bold" style="font-size: 1.5rem; color: #28a745;">$ 0</span>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <!-- Botón Proceder al Pago (Izquierda) -->
                        <form asp-controller="Home" asp-action="Index" method="post">
                            <button class="btn btn-outline-secondary btn-lg btn-seguir-comprando" type="submit">
                                Proceder Al Pago
                            </button>
                        </form>

                        <!-- Botón Seguir Comprando (Derecha) -->
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <button class="btn btn-outline-secondary btn-lg btn-seguir-comprando" type="submit">
                                Seguir Comprando
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        function updateTotal() {
            let total = 0;
            $('.subtotal').each(function () {
                const subtotalValue = parseFloat($(this).val().replace('$', '').replace(',', ''));
                total += subtotalValue;
            });
            $('#totalPagar').text(`$/. ${total.toFixed(2)}`);
        }

        $('.change-quantity').on('click', function () {
            const action = $(this).data('action');
            const row = $(this).closest('tr');
            const quantityInput = row.find('.cantidad');
            const price = parseFloat(row.find('.precio').val().replace('$', '').replace(',', ''));
            let quantity = parseInt(quantityInput.val());


            const subtotal = quantity * price;
            row.find('.subtotal').val(`$${subtotal.toFixed(2)}`);

            updateTotal();
        });

        // Inicializar el total al cargar la página
        updateTotal();
    });
</script>