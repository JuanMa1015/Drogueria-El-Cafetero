                        @* <div class="sb-sidenav-menu-heading">Ordenes</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseOrdenes" aria-expanded="false" aria-controls="collapseOrdenes">
                            <div class="sb-nav-link-icon"><i class='bx bx-list-ul'></i></div>
                            Ordenes
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseOrdenes" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="purchase_orders" asp-action="Index">Lista De Ordenes</a>
                                <a class="nav-link" asp-area="" asp-controller="purchase_orders_details" asp-action="Index">Detalles De Ordenes</a>
                                <a class="nav-link" asp-area="" asp-controller="purchase_orders_invoice" asp-action="Index">Facturas</a>
                            </nav>
                        </div>

                        @* <div class="sb-sidenav-menu-heading">Proveedores</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseProveedores" aria-expanded="false" aria-controls="collapseProveedores">
                            <div class="sb-nav-link-icon"><i class='bx bx-store'></i></div>
                            Proveedores
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseProveedores" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="suppliers" asp-action="Index">Lista De Proveedores</a>
                                <a class="nav-link" asp-area="" asp-controller="suppliers_invoices" asp-action="Index">Facturas</a>
                                <a class="nav-link" asp-area="" asp-controller="discount_suppliers_invoices" asp-action="Index">Descuentos</a>
                            </nav>
                        </div>

                        @* <div class="sb-sidenav-menu-heading">Ventas</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseVentas" aria-expanded="false" aria-controls="collapseVentas">
                            <div class="sb-nav-link-icon"><i class='bx bx-dollar'></i></div>
                            Ventas
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseVentas" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="sales" asp-action="Index">Lista De Ventas</a>
                                <a class="nav-link" asp-area="" asp-controller="sales_details" asp-action="Index">Detalles De Venta</a>
                                <a class="nav-link" asp-area="" asp-controller="sales_invoices" asp-action="Index">Facturas</a>
                            </nav>
