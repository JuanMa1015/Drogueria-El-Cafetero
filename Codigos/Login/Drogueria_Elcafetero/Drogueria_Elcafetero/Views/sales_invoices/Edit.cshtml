                        <div class="collapse" id="collapseProductos" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Lista De Productos</a>
                                <a class="nav-link" asp-area="" asp-controller="categories" asp-action="Index">Lista De Categorías</a>
                            </nav>
