@model Drogueria_Elcafetero.Models.products

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_product" />
            <div class="form-group">
                <label asp-for="product_name" class="control-label"></label>
                <input asp-for="product_name" class="form-control" />
                <span asp-validation-for="product_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="units_in_stock" class="control-label"></label>
                <input asp-for="units_in_stock" class="form-control" />
                <span asp-validation-for="units_in_stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_supplier" class="control-label"></label>
                <input asp-for="id_supplier" class="form-control" />
                <span asp-validation-for="id_supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expiration_date" class="control-label"></label>
                <input asp-for="expiration_date" class="form-control" />
                <span asp-validation-for="expiration_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
