@model IEnumerable<Drogueria_Elcafetero.Models.products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.units_in_stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expiration_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.units_in_stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_supplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.expiration_date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_product">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_product">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_product">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
