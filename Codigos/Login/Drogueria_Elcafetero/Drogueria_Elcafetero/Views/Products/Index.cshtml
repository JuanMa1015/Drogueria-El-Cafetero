@model IEnumerable<Drogueria_Elcafetero.Models.products>

@{
    ViewData["Title"] = "Lista de Productos";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Direcciones</title>
    <link rel="stylesheet" href="~/css/styleIndexAdmin.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <h1>Lista de Productos</h1>

        <p>
            <a class="btn" asp-action="Create">Crear Nuevo Producto</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.product_name)</th>
                    <th>@Html.DisplayNameFor(model => model.price)</th>
                    <th>@Html.DisplayNameFor(model => model.units_in_stock)</th>
                    <th>@Html.DisplayNameFor(model => model.id_supplier)</th>
                    <th>@Html.DisplayNameFor(model => model.expiration_date)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.product_name)</td>
                        <td>@Html.DisplayFor(modelItem => item.price)</td>
                        <td>@Html.DisplayFor(modelItem => item.units_in_stock)</td>
                        <td>@Html.DisplayFor(modelItem => item.id_supplier)</td>
                        <td>@Html.DisplayFor(modelItem => item.expiration_date)</td>
                        <td class="actions">
                            <a class="btn-action btn-edit" asp-action="Edit" asp-route-id="@item.id_product">Editar</a>
                            <a class="btn-action btn-details" asp-action="Details" asp-route-id="@item.id_product">Detalles</a>
                            <a class="btn-action btn-delete" asp-action="Delete" asp-route-id="@item.id_product">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
