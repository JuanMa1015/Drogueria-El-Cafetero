@model IEnumerable<Drogueria_Elcafetero.Models.detailsProduct>

@{
    ViewData["Title"] = "Home Page";



    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <!-- CSS de Bootstrap para estilos -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/css/bootstrap.min.css">
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/CardProductos.css" />
    <link rel="stylesheet" href="~/css/NavbarIndex.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <!-- Icono de la izquierda -->
            <div class="navbar-brand text-white">
                <i class="fas fa-prescription-bottle-alt"></i> Droguería El Cafetero
            </div>
            <!-- Botón de iniciar sesión -->
            <a class="btn btn-outline-light d-flex align-items-center justify-content-start" asp-area="" asp-controller="Inicio" asp-action="Login">
                <i class="fas fa-user me-2"></i> <!-- Ícono con margen derecho -->
                <span>Iniciar sesión</span>
            </a>

        </div>
    </nav>

    <div class="productos-container">
        @if (Model != null && Model.Any())

        {
            @foreach (var product in Model)

            {
                <div class="producto-card">
                    <img src="@product.Image" alt="@product.ProductName" class="producto-imagen" />
                    <div class="producto-detalles">
                        <h3>@product.ProductName</h3>
                        <p>@product.CategoryName</p>
                        <p class="product-price">$@product.Price</p>
                        <form asp-controller="Inicio" asp-action="Login" method="get">
                            <button type="submit" class="add-to-cart-btn">Agregar al carrito</button>
                        </form>

                    </div>
                </div>
            }
        }

        else

        {
            <p>No hay productos disponibles.</p>
        }
    </div>

  
    <!-- Scripts de Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>