@model IEnumerable<Drogueria_Elcafetero.Models.detailsProduct>

@{
    ViewData["Title"] = "Home Page";

    Layout = null; // Usamos una vista sin layout
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <!-- CSS de Bootstrap para estilos -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/css/bootstrap.min.css">
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/CardProductos.css"/>
    <style>
        .navbar {
            background-color: #007bff;
        }

        .navbar-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.5rem 1rem;
        }

        .navbar-left {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-custom {
            padding: 0.375rem 1rem;
        }

        .navbar-icon {
            color: #007bff;
            background-color: white;
            border-radius: 50%;
            padding: 0.3rem;
            font-size: 1.5rem;
        }

        .navbar-text {
            color: white;
            font-size: 1rem;
            font-weight: bold;
        }

        /* Estilos para el botón de búsqueda */
        .search-btn {
            padding: 0.375rem 1.5rem;
            color: #007bff;
            background-color: white;
            border: 1px solid #007bff;
        }

            .search-btn i {
                margin-left: 0.5rem;
            }
    </style>
</head>
<body>

    <!-- Barra de Navegación -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="navbar-container container-fluid">
            <!-- Parte izquierda de la barra de navegación -->
            <div class="navbar-left">

                <!-- Menú categorías con el icono de tres líneas -->
                <i class="fas fa-bars navbar-icon"></i>

                <!-- Botón de búsqueda con lupa al final -->
                <button class="btn search-btn btn-custom">
                    Buscar
                    <i class="fas fa-search"></i>
                </button>
            </div>

            <!-- Parte derecha de la barra de navegación -->
            <div class="navbar-right">
                @if (User.Identity.IsAuthenticated)

                {
                    <!-- Botón Carrito -->
                    <button class="btn btn-outline-light btn-custom" type="button">
                        <i class="fas fa-shopping-cart me-2"></i> Carrito
                        <span class="badge bg-light text-dark ms-2 rounded-pill">0</span>
                    </button>

                    <!-- Dropdown de usuario -->
                        <div class="nav-item dropdown">
                            <a class="btn btn-outline-light btn-custom dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Mis Compras</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Inicio" asp-action="Salir">Cerrar Sesión</a></li>
                            </ul>
                        </div>
                }

                else

                {
                    <!-- Botones Iniciar Sesión y Registrarse -->
                    <a class="btn btn-outline-light btn-custom" asp-area="" asp-controller="Inicio" asp-action="Login">
                        <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                    </a>
                    <a class="btn btn-outline-light btn-custom" asp-area="" asp-controller="Inicio" asp-action="Registrar">
                        <i class="fas fa-user-plus me-2"></i> Registrarse
                    </a>
                }
            </div>
        </div>
    </nav>

    <div class="productos-container">
        @if (Model != null && Model.Any())



        {
            @foreach (var product in Model)



            {
                <div class="producto-card">
                    <img src="@product.Image" alt="@product.ProductName" class="producto-imagen" />
                    <div class="producto-detalles">
                        <h3>@product.ProductName</h3>
                        <p> @product.CategoryName</p>
                        @*                         <p>Proveedor: @producto.proveedor</p> *@
                        <p> $@product.Price</p>
                        @*                        <p>Unidades en stock: @producto.unidades_stock</p>
                *@                        <button class="add-to-cart-btn">Agregar al carrito</button>
                    </div>
                </div>
            }
        }



        else



        {
            <p>No hay productos disponibles.</p>
        }

    </div>
    <footer class="footer">
        <div class="footer-section">
            <h4>Drogueria El Cafetero</h4>
            <div class="app-links">
            </div>
        </div>

        <div class="footer-section">
            <h4>Contáctanos</h4>
            <p>Desde celular a nivel nacional</p>
            <p class="contact-number">601 486 5000</p>
            <p>Línea nacional de ventas</p>
            <p class="contact-number">01 8000 910545</p>
            <div class="social-icons">
                <i class="fab fa-facebook"></i>
                <i class="fab fa-instagram"></i>
                <i class="fab fa-linkedin"></i>
                <i class="fab fa-youtube"></i>
                <i class="fab fa-whatsapp"></i>
                <i class="fab fa-tiktok"></i>
            </div>
        </div>

        <div class="footer-section">
            <h4>Nosotros</h4>
            <ul>
                <li>Quiénes somos</li>
                <li>Nuestra Historia</li>
                <li>Negocios Institucionales</li>
                <li>Sostenibilidad</li>
                <li>Noticias Cruz Verde</li>
                <li>Notificaciones</li>
                <li>Trabaja con nosotros</li>
            </ul>
        </div>

        <div class="footer-section">
            <h4>Legales</h4>
            <ul>
                <li>Aviso de privacidad</li>
                <li>Políticas</li>
                <li>Términos y condiciones</li>
                <li>TyC-Textos legales</li>
                <li>Reversión de pago</li>
            </ul>
        </div>

        <div class="footer-section">
            <h4>Nuestros servicios</h4>
            <ul>
                <li>Domicilios</li>
                <li>Retiro en droguería</li>
                <li>Entregas nacionales</li>
                <li>Droguerías</li>
                <li>Catálogos Cruz Verde</li>
                <li>Convenios</li>
                <li>Buzón digital</li>
                <li>Preguntas frecuentes</li>
                <li>Uso de medicamentos</li>
            </ul>
        </div>

        <div class="footer-section">
            <h4>Club Cruz Verde</h4>
            <ul>
                <li>Inscríbete</li>
                <li>Beneficios</li>
                <li>Artículos sobre salud y bienestar</li>
                <li>Términos y condiciones</li>
            </ul>
        </div>
    </footer>

    <!-- Scripts de JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
