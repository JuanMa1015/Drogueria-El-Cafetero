@model IEnumerable<Drogueria_Elcafetero.Models.address>

@{
    ViewData["Title"] = "Lista de Direcciones";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Direcciones</title>
    <link rel="stylesheet" href="~/css/style2.css">

</head>
<body>
    <div class="container">
        <h1>Lista de Direcciones</h1>

        <p>
            <a class="btn" asp-action="Create">Crear Nueva Dirección</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().city_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().id_supplier)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.city_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_supplier)
                        </td>
                        <td class="actions">
                            <a class="btn-action btn-edit" asp-action="Edit" asp-route-id="@item.id_address">Editar</a>
                            <a class="btn-action btn-details" asp-action="Details" asp-route-id="@item.id_address">Detalles</a>
                            <a class="btn-action btn-delete" asp-action="Delete" asp-route-id="@item.id_address">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
