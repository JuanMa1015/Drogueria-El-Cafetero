@model Drogueria_Elcafetero.Models.address

@{
    ViewData["Title"] = "Editar Dirección";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/editAdmin.css" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" asp-controller="Admin" asp-action="AdminVM">Administrador</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-controller="Inicio" asp-action="Login">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar Navigation -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- Empleados Section -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseEmpleados" aria-expanded="false" aria-controls="collapseEmpleados">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Empleados
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseEmpleados" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="Employees" asp-action="Index">Lista De Empleados</a>
                                <a class="nav-link" asp-controller="Employees" asp-action="Create">Nuevo Empleado</a>
                            </nav>
                        </div>

                        <!-- Productos Section -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseProductos" aria-expanded="false" aria-controls="collapseProductos">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Productos
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseProductos" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">Lista De Productos</a>
                                <a class="nav-link" asp-controller="Products" asp-action="Create">Nuevo Producto</a>
                            </nav>
                        </div>

                        <!-- Ordenes Section -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseOrdenes" aria-expanded="false" aria-controls="collapseOrdenes">
                            <div class="sb-nav-link-icon"><i class="fas fa-list-alt"></i></div>
                            Ordenes
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseOrdenes" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="purchase_orders" asp-action="Index">Lista De Ordenes</a>
                                <a class="nav-link" asp-controller="purchase_orders_details" asp-action="Index">Detalles De Ordenes</a>
                                <a class="nav-link" asp-controller="purchase_orders_invoice" asp-action="Index">Facturas</a>
                                <a class="nav-link" asp-controller="purchase_orders" asp-action="Create">Nueva Orden</a>
                            </nav>
                        </div>

                        <!-- Proveedores Section -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseProveedores" aria-expanded="false" aria-controls="collapseProveedores">
                            <div class="sb-nav-link-icon"><i class="fas fa-truck"></i></div>
                            Proveedores
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseProveedores" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="suppliers" asp-action="Index">Lista De Proveedores</a>
                                <a class="nav-link" asp-controller="suppliers" asp-action="Create">Nuevo Proveedor</a>
                                <a class="nav-link" asp-controller="suppliers_invoices" asp-action="Index">Facturas</a>
                                <a class="nav-link" asp-controller="discount_suppliers_invoices" asp-action="Index">Descuentos</a>
                                <a class="nav-link" asp-controller="suppliers_products" asp-action="Index">Productos de Proveedores</a>
                            </nav>
                        </div>

                        <!-- Ventas Section -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseVentas" aria-expanded="false" aria-controls="collapseVentas">
                            <div class="sb-nav-link-icon"><i class="fas fa-cash-register"></i></div>
                            Ventas
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseVentas" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="sales" asp-action="Index">Lista De Ventas</a>
                                <a class="nav-link" asp-controller="sales_details" asp-action="Index">Detalles De Venta</a>
                                <a class="nav-link" asp-controller="sales_invoices" asp-action="Index">Facturas</a>
                                <a class="nav-link" asp-controller="sales" asp-action="Create">Nueva Venta</a>
                            </nav>
                        </div>

                        <!-- Direcciones Section -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseDirecciones" aria-expanded="false" aria-controls="collapseDirecciones">
                            <div class="sb-nav-link-icon"><i class="fas fa-map-marker-alt"></i></div>
                            Direcciones
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseDirecciones" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="addresses" asp-action="Index">Lista De Direcciones</a>
                                <a class="nav-link" asp-controller="addresses" asp-action="Create">Nueva Dirección</a>
                                <a class="nav-link" asp-controller="city_towns" asp-action="Index">Ciudades</a>
                            </nav>
                        </div>

                        <!-- Clientes Section -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseClientes" aria-expanded="false" aria-controls="collapseClientes">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Clientes
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseClientes" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-controller="users" asp-action="Index">Lista De Clientes</a>
                                <a class="nav-link" asp-controller="users" asp-action="Create">Nuevo Cliente</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main class="mt-4">
                <div class="container-fluid px-4">
                    <div class="container">
                        <h1>Editar Dirección</h1>
                        <div>
                            <h4>Formulario de Edición</h4>
                            <hr />
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="id_address" />
                                <div class="form-group">
                                    <label asp-for="city_name" class="control-label"></label>
                                    <input asp-for="city_name" class="form-control" />
                                    <span asp-validation-for="city_name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="description" class="control-label"></label>
                                    <input asp-for="description" class="form-control" />
                                    <span asp-validation-for="description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="id_supplier" class="control-label"></label>
                                    <input asp-for="id_supplier" class="form-control" />
                                    <span asp-validation-for="id_supplier" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                        <div class="button-group">
                            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>
