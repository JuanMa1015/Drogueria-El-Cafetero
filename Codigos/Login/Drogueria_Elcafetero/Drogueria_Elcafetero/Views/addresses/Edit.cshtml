<body>
    <div class="container">
        <h1>Editar Dirección</h1>

        <div>
            <h4>Formulario de Edición</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id_address" />
                <div class="form-group">
                    <label asp-for="city_name" class="control-label"></label>
                    <input asp-for="city_name" class="form-control" />
                    <span asp-validation-for="city_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <input asp-for="description" class="form-control" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="id_supplier" class="control-label"></label>
                    <input asp-for="id_supplier" class="form-control" />
                    <span asp-validation-for="id_supplier" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div>
            <a class="btn" asp-action="Index">Volver a la Lista</a>
        </div>
    </div>

    @section Scripts {
