@model Drogueria_Elcafetero.Models.address

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Dirección</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f8ff;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        h1 {
            font-size: 2em;
            text-align: center;
            color: white;
            background-color: #dc3545; /* Fondo rojo para eliminar */
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        h4 {
            font-size: 1.5em;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        dt {
            font-weight: bold;
            color: #333;
        }

        dd {
            margin-bottom: 10px;
            color: #555;
        }

        .btn-danger {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #dc3545; /* Color rojo */
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c82333; /* Color rojo más oscuro */
        }

        .btn-secondary {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #777;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #555;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Eliminar Dirección</h1>

        <h3>¿Está seguro de que desea eliminar esto?</h3>
        <div>
            <h4>Detalles de la Dirección</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.city_name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.city_name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.id_supplier)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.id_supplier)
                </dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="id_address" />
                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a class="btn-secondary" asp-action="Index">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
