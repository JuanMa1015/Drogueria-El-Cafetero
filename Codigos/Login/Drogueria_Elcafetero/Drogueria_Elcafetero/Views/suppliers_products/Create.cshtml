@model Drogueria_Elcafetero.Models.suppliers_products

@{
    ViewData["Title"] = "Crear Relación Proveedor-Producto";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/createAdmin.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" asp-controller="Admin" asp-action="AdminVM">Administrador</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-controller="Inicio" asp-action="Login">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- Añadir navegación aquí -->
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseEmpleados" aria-expanded="false" aria-controls="collapseEmpleados">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Empleados
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseEmpleados" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Index">Lista De Empleados</a>
                                <a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Create">Nuevo Empleado</a>
                            </nav>
                        </div>
                        @*
                        <div class="sb-sidenav-menu-heading">Productos</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseProductos" aria-expanded="false" aria-controls="collapseProductos">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Productos
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseProductos" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Lista De Productos</a>
                                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Create">Nuevo Producto</a>
                            </nav>
                        </div>

                        @* <div class="sb-sidenav-menu-heading">Ordenes</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseOrdenes" aria-expanded="false" aria-controls="collapseOrdenes">
                            <div class="sb-nav-link-icon"><i class="fas fa-list-alt"></i></div>
                            Ordenes
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseOrdenes" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="purchase_orders" asp-action="Index">Lista De Ordenes</a>
                                <a class="nav-link" asp-area="" asp-controller="purchase_orders_details" asp-action="Index">Detalles De Ordenes</a>
                                <a class="nav-link" asp-area="" asp-controller="purchase_orders_invoice" asp-action="Index">Facturas</a>
                                <a class="nav-link" asp-area="" asp-controller="purchase_orders" asp-action="Create">Nueva Orden</a>
                            </nav>
                        </div>

                        @* <div class="sb-sidenav-menu-heading">Proveedores</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseProveedores" aria-expanded="false" aria-controls="collapseProveedores">
                            <div class="sb-nav-link-icon"><i class="fas fa-truck"></i></div>
                            Proveedores
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseProveedores" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="suppliers" asp-action="Index">Lista De Proveedores</a>
                                <a class="nav-link" asp-area="" asp-controller="suppliers" asp-action="Create">Nuevo Proveedor</a>
                                <a class="nav-link" asp-area="" asp-controller="suppliers_invoices" asp-action="Index">Facturas</a>
                                <a class="nav-link" asp-area="" asp-controller="discount_suppliers_invoices" asp-action="Index">Descuentos</a>
                                <a class="nav-link" asp-area="" asp-controller="suppliers_products" asp-action="Index">Productos de Proveedores</a>
                            </nav>
                        </div>

                        @* <div class="sb-sidenav-menu-heading">Ventas</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseVentas" aria-expanded="false" aria-controls="collapseVentas">
                            <div class="sb-nav-link-icon"><i class="fas fa-cash-register"></i></div>
                            Ventas
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseVentas" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="sales" asp-action="Index">Lista De Ventas</a>
                                <a class="nav-link" asp-area="" asp-controller="sales_details" asp-action="Index">Detalles De Venta</a>
                                <a class="nav-link" asp-area="" asp-controller="sales_invoices" asp-action="Index">Facturas</a>
                                <a class="nav-link" asp-area="" asp-controller="sales" asp-action="Create">Nueva Venta</a>
                            </nav>
                        </div>

                        @* <div class="sb-sidenav-menu-heading">Direcciones</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseDirecciones" aria-expanded="false" aria-controls="collapseDirecciones">
                            <div class="sb-nav-link-icon"><i class="fas fa-map-marker-alt"></i></div>
                            Direcciones
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseDirecciones" aria-labelledby="headingFour" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="addresses" asp-action="Index">Lista De Direcciones</a>
                                <a class="nav-link" asp-area="" asp-controller="addresses" asp-action="Create">Nueva Dirección</a>
                                <a class="nav-link" asp-area="" asp-controller="city_towns" asp-action="Index">ciudades</a>
                            </nav>
                        </div>

                        @* <div class="sb-sidenav-menu-heading">Clientes</div> *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseClientes" aria-expanded="false" aria-controls="collapseClientes">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Clientes
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseClientes" aria-labelledby="headingFour" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="" asp-controller="users" asp-action="Index">Lista De Clientes</a>
                                <a class="nav-link" asp-area="" asp-controller="users" asp-action="Create">Nuevo Cliente</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main class="mt-4">
                <div class="container-fluid px-4">
                    <header>
                        <h1>Crear Relación Proveedor-Producto</h1>
                    </header>
                    <h4>Información de la Relación</h4>
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="id_product" class="control-label">ID del Producto</label>
                            <input asp-for="id_product" class="form-control" />
                            <span asp-validation-for="id_product" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="id_supplier" class="control-label">ID del Proveedor</label>
                            <input asp-for="id_supplier" class="form-control" />
                            <span asp-validation-for="id_supplier" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="price" class="control-label">Precio</label>
                            <input asp-for="price" class="form-control" />
                            <span asp-validation-for="price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="agreement_date" class="control-label">Fecha del Acuerdo</label>
                            <input asp-for="agreement_date" class="form-control" />
                            <span asp-validation-for="agreement_date" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                        </div>
                    </form>
                    <div>
                        <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
