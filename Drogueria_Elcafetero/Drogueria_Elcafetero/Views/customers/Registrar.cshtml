@model Drogueria_el_cafetero.Models.customers

@{
ViewData["Title"] = "Registrar";
}

<div class="row justify-content-center mt-5">

    <div class="col-5">

        <div class="card">
            <div class="card-header"><h3 class="text-center">Registrar cuenta</h3></div>
            <div class="card-body">

                @if (ViewBag.Creado == null)
                {
                    <form asp-action="Create">

                        <div class="mb-3">
                            <label>Nombre</label>

                            <input asp-for="customer_name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Correo</label>
                            <input asp-for="email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Contraseña</label>
                                 <input asp-for="password_hash" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Confirmar Contraseña</label>
                                <input asp-for="confirmed_password" class="form-control" />
                        </div>

                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Mensaje
                            </div>
                        }

                        <div class="mb-3">
                            <div class="d-grid">
                                <button class="btn btn-primary" type="submit">Registrarse </button>
                                <a class="btn btn-link" href="@Url.Action("Login","Inicio")">Ya tienes una cuenta? Inicia sesion</a>
                            </div>
                        </div>


                    </form>
                }
                else
                {
                    <div class="alert alert-success">
                        <p>@ViewBag.Mensaje</p>
                        <a class="btn btn-success" href="@Url.Action("Login","Inicio")">Ingresar</a>
                    </div>
                }


            </div>
        </div>

    </div>
</div>

